<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXMasonryPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import masktextfield.MaskTextField?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="516.0" prefWidth="414.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="copaff.ui.game.MatchController">
   <content>
      <StackPane fx:id="rootPane">
         <children>
            <VBox fx:id="mainContainer" alignment="CENTER" StackPane.alignment="CENTER">
               <children>
                  <VBox spacing="15.0" VBox.vgrow="NEVER">
                     <children>
                        <HBox alignment="CENTER" VBox.vgrow="NEVER">
                           <children>
                              <Label text="Scrimmage:" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                                 <padding>
                                    <Insets right="10.0" />
                                 </padding>
                              </Label>
                              <ChoiceBox fx:id="scrimList" HBox.hgrow="ALWAYS" />
                              <JFXButton buttonType="RAISED" onAction="#handleLoadMatchAction" text="Load Match">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </JFXButton>
                           </children>
                        </HBox>
                        <HBox alignment="BOTTOM_CENTER" spacing="20.0" VBox.vgrow="NEVER">
                           <children>
                              <HBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Squad Name">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <ChoiceBox fx:id="squadList" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" HBox.hgrow="NEVER">
                                 <children>
                                    <Label text="Squad Place">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleMinusAction" text="-">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                    <MaskTextField fx:id="squadPosition" alignment="CENTER" editable="false" mask="N!" prefWidth="60.0" text="1">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </MaskTextField>
                                    <Button alignment="CENTER" mnemonicParsing="false" onAction="#handlePlusAction" text="+">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox VBox.vgrow="NEVER">
                                       <children>
                                          <Label text="Player 1">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                             <padding>
                                                <Insets right="10.0" />
                                             </padding>
                                          </Label>
                                          <ChoiceBox fx:id="player1" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox VBox.vgrow="NEVER">
                                       <children>
                                          <Label text="Player 2">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                             <padding>
                                                <Insets right="10.0" />
                                             </padding>
                                          </Label>
                                          <ChoiceBox fx:id="player2" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox VBox.vgrow="NEVER">
                                       <children>
                                          <Label text="Player 3">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                             <padding>
                                                <Insets right="10.0" />
                                             </padding>
                                          </Label>
                                          <ChoiceBox fx:id="player3" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox VBox.vgrow="NEVER">
                                       <children>
                                          <Label text="Player 4">
                                             <font>
                                                <Font size="16.0" />
                                             </font>
                                             <padding>
                                                <Insets right="10.0" />
                                             </padding>
                                          </Label>
                                          <ChoiceBox fx:id="player4" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                 <children>
                                    <ChoiceBox fx:id="cardList" />
                                    <JFXButton buttonType="RAISED" onAction="#handleRemoveCardAction" text="Delete Squad">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </JFXButton>
                                 </children>
                              </HBox>
                              <JFXButton buttonType="RAISED" layoutX="160.0" layoutY="10.0" onAction="#handleAddSquadToMatchAction" text="Add Squad to Match">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" VBox.vgrow="NEVER">
                     <children>
                        <JFXButton buttonType="RAISED" onAction="#handleExportMatchAsPDFAction" text="Export Match as PDF">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </JFXButton>
                        <JFXButton buttonType="RAISED" layoutX="10.0" layoutY="10.0" onAction="#handleSaveMatchAction" text="Save Match">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </HBox>
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <JFXMasonryPane fx:id="cardContainer" HSpacing="10.0" VSpacing="10.0" cellHeight="100.0" cellWidth="120.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </StackPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
