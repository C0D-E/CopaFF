<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import masktextfield.MaskTextField?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="copaff.ui.game.MatchController">
   <content>
      <StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="1000.0">
         <children>
            <VBox fx:id="mainContainer" alignment="CENTER" StackPane.alignment="CENTER">
               <children>
                  <VBox spacing="15.0" VBox.vgrow="NEVER">
                     <children>
                        <HBox alignment="CENTER" maxWidth="1.7976931348623157E308">
                           <children>
                              <Label text="Scrimmage:" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                                 <padding>
                                    <Insets right="10.0" />
                                 </padding>
                              </Label>
                              <ChoiceBox fx:id="scrimList" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="BOTTOM_CENTER" spacing="20.0">
                           <children>
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Squad Name">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <ChoiceBox fx:id="squadList" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Squad Place">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <HBox alignment="CENTER">
                                       <children>
                                          <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleMinusAction" text="-">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Button>
                                          <MaskTextField fx:id="squadPosition" alignment="CENTER" editable="false" mask="N!" prefWidth="60.0" text="1">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </MaskTextField>
                                          <Button alignment="CENTER" mnemonicParsing="false" onAction="#handlePlusAction" text="+">
                                             <font>
                                                <Font size="14.0" />
                                             </font>
                                          </Button>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Player 1">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <ChoiceBox fx:id="player1" maxWidth="1.7976931348623157E308" />
                                    <Label layoutX="27.0" layoutY="10.0" text="Player 2">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <ChoiceBox fx:id="player2" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Player 3">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <ChoiceBox fx:id="player3" maxWidth="1.7976931348623157E308" />
                                    <Label layoutX="14.0" layoutY="15.0" text="Player 4">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </Label>
                                    <ChoiceBox fx:id="player4" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" VBox.vgrow="ALWAYS">
                           <children>
                              <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                 <children>
                                    <ChoiceBox fx:id="cardList" prefWidth="150.0" />
                                    <JFXButton buttonType="RAISED" onAction="#handleRemoveCardAction" text="Delete Squad">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </JFXButton>
                                 </children>
                              </HBox>
                              <JFXButton buttonType="RAISED" layoutX="160.0" layoutY="10.0" onAction="#handleAddSquadToMatchAction" text="Add Squad to Match">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </JFXButton>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <VBox fx:id="oddSquadPositions" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                        <VBox fx:id="evenSquadPositions" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</ScrollPane>
